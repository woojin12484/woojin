generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LoanSchedule {
  id                  String   @id @default(uuid())
  vehiclePrice        Float
  downPayment         Float
  engineDisplacement  Int
  fuelType            String
  envChargeSemiAnnual Float
  loanAmount          Float
  interestRate        Float
  termMonths          Int
  startDate           DateTime
  
  status              String   @default("DRAFT") // DRAFT, APPROVED
  createdAt           DateTime @default(now())
}
